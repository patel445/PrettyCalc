{
    "manifest_version": 2
    , "name": "PrettyCalc"
    , "description": "A very simple and elegant designed calculator"
    , "version": "1.0"
    , "browser_action": {
        "default_icon": "calc.png"
        , "default_popup": "popup.html"
        , "default_title": "Calculator"
    }
    , "background": {
        "scripts": [
            "popup.js"
        ]
    }
    , "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
    , "permissions": [
   "activeTab"
   ]
}